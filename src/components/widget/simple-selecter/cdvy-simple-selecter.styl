$cdvy-simple-selecter-color = $label-info-color

.cdvy-simple-selecter
  height 150px
  width 150px
  border-color $form-element-border-color
  background-color $background-color
  border-width 2px
  border-style solid
  codenvy-border-radius(3px)
  -webkit-box-shadow 0 1px 1px rgba(0, 0, 0, 0.05)
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.05)
  padding-top 12px
  margin-left 16px
  margin-right 16px
  color $cdvy-simple-selecter-color

  &:hover
    background-color $cdvy-simple-selecter-color
    color $background-color

.cdvy-simple-selecter .title
  padding-top 4px
  padding-bottom 3px

.cdvy-simple-selecter .body
  margin-bottom 8px

.cdvy-simple-selecter md-icon
  font-size 60px
  text-align center
  margin-left auto
  margin-right auto
  margin-top 16px
  margin-bottom 0px
  padding 0px
  height 74px
  width 74px

.cdvy-simple-selecter .title
  font-size 12px
  text-align center
  text-transform uppercase

.cdvy-simple-selecter-active
  border-color $primary-color
  color $primary-color

  &:hover
    background-color $background-color


.cdvy-simple-selecter-active .body
  background-color $primary-color

.cdvy-simple-selecter-active .title
  background-color $primary-color
  color $background-color

.cdvy-simple-selecter-active:hover .body
  background-color $primary-color !important
  color $background-color

.cdvy-simple-selecter-active:hover md-icon
  color $primary-color

.cdvy-simple-selecter-active md-icon
  color $primary-color

.cdvy-simple-selecter:active .body
  display block

cdvy-simple-selecter md-card:focus
  outline none

cdvy-simple-selecter
  outline none
