$title-color=#dfdfdf

.team-members-account, .team-members-account:focus, .team-members-account md-select-value
  color $white-color !important
  font-size 16px

.team-members-account md-select-value
  border-bottom-color $white-color !important

.team-members-account md-content
  padding 0px

.team-members-title
  background-color $title-color
  padding 15px

.team-members-content
  padding-left 15px
  padding-top 15px
  padding-bottom 15px

.team-members-list-side
  width 0
  flex-shrink 0
  flex-grow 0
  position static

.team-members-list-side-big
  width 80px
  position relative

.team-members-small
  margin-bottom 75px

.team-members-row
  min-height 56px

.team-members-face-container
  flex-shrink 0

.team-members-face
  codenvy-developers-face()
  margin-left 10px
  margin-right 20px

.team-members-email
  color $label-secondary-color
  text-overflow ellipsis
  white-space nowrap
  overflow hidden

.team-members-description
  color $label-info-color
  text-transform capitalize

.team-members-actions
  color $label-info-color
  cursor pointer
  height 24px
  font-size 24px
  line-height 24px
  margin-right 15px

.team-add-member-dialog
  width 400px

.team-add-member-dialog label
  width 50%
