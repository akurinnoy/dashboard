json('codenvy-colors.json')

$primary-color = $codenvy-green-color
$default-dark-color = $codenvy-navy-color
$default-color = $codenvy-medium-blue-color
$secondary-color = $codenvy-orange-color
$secondary-light = $codenvy-purple-color
$menu-bg-color = $dark-menu-color
$label-primary-color = $night-foggy-sky-color
$label-secondary-color = $dark-menacing-sky-color
$label-info-color = $clear-foggy-sky-color
$error-color = $red-lipstick-color
$list-separator-color = $cat-gray-color
$form-element-border-color = $mouse-gray-color
$white-color = $codenvy-white-color
$link-color = $codenvy-medium-blue-color
$frame-notlogged-color = $codenvy-green-color
$frame-notlogged-bg-color = alpha($codenvy-green-color, 0.2)
$frame-nosubscription-color = $codenvy-medium-blue-color
$frame-nosubscription-bg-color = alpha($codenvy-medium-blue-color, 0.2)
$frame-subscription-color = $codenvy-medium-blue-color
$frame-subscription-bg-color = alpha($codenvy-medium-blue-color, 0.2)
$auth-error-color = $codenvy-orange-color
$auth-ok-color = $codenvy-green-color

$config-syntax-help-color = $night-foggy-sky-color
$config-frame-warning-bg-color = alpha($codenvy-orange-color, 0.2)
$config-frame-warning-color = $codenvy-orange-color

$frame-available-bg-color = alpha($codenvy-medium-blue-color, 0.2)

// change alpha on existing colors
$hover-on-list-color = rgba($default-color, 0.13)

// tooltip border color
$tooltip-border-color = rgba(51, 51, 51, 1)

// tooltip background color
$tooltip-background-color = rgba(0, 0, 0, 0.8)

// disabled widget color
$disabled-color = rgba(0, 0, 0, 0.26)

$background-color = $white-color

$default-border-color = $list-separator-color

$background-site-color = darken($dark-menu-color, 15%)


// box shadows
box-shadow-simple()
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.26)

box-shadow-bigger()
  box-shadow 0 2px 6px 0 rgba(0, 0, 0, 0.40)

codenvy-border-radius(n)
  border-radius n !important

codenvy-brightness(n)
  filter brightness(n)
