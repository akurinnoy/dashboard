$title-color=#dfdfdf

.workspace-members-content
  padding-left 15px
  padding-top 15px
  padding-bottom 15px

.workspace-members-title
  background-color $title-color
  padding 15px

.workspace-members-list-side
  width 0
  flex-shrink 0
  flex-grow 0
  position static

.workspace-members-list-side-big
  width 80px
  position relative

.members-small
  margin-bottom 75px

.workspace-members-row
  min-height 56px

.workspace-members-face-container
  flex-shrink 0

.workspace-members-face
  codenvy-developers-face()
  margin-left 10px
  margin-right 20px

.workspace-members-email
  color $label-secondary-color
  text-overflow ellipsis
  white-space nowrap
  overflow hidden

.workspace-members-description
  color $label-info-color
  text-transform capitalize

.workspace-members-actions
  color $label-info-color
  cursor pointer
  height 24px
  font-size 24px
  line-height 24px
  margin-right 15px

.workspace-add-member-dialog
  width 400px

.workspace-add-member-dialog label
  width 50%
